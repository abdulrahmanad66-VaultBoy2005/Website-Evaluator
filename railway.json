{
  "build": {
    "builder": "NIXPACKS",
    "buildCommand": "chmod +x mvnw && ./mvnw clean package -DskipTests"
  },
  "deploy": {
    "startCommand": "java -jar target/*.jar",
    "healthcheckPath": "/health",
    "healthcheckTimeout": 300,
    "restartPolicyType": "ON_FAILURE",
    "restartPolicyMaxRetries": 10
  }
}